<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nav_header"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/userNameHeaderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImage"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/white" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#36000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/abt_hlp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/aboutus"
            android:layout_height="wrap_content"/>
            <!--android:background="@android:drawable/"-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="About Helpmeson"
            android:textColor="#662E91" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/senior_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="29dp"
            android:background="@drawable/citizenicon"
            android:layout_height="29dp"/>
        <!--android:background="@android:drawable/"-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Senior Issues"
            android:textColor="#662E91" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_sto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/topstories"
            android:layout_height="wrap_content"/>
        <!--android:background="@android:drawable/"-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Top Stories"
            android:textColor="#662E91" />
    </LinearLayout>
    <LinearLayout
    android:id="@+id/call"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/callus"
        android:layout_height="wrap_content"/>
    <!--android:background="@android:drawable/"-->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="+9112033553"
        android:textColor="#662E91" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/mailus"
            android:layout_height="wrap_content"/>
        <!--android:background="@android:drawable/"-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Mail us"
            android:textColor="#662E91" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/playstore"
            android:layout_height="wrap_content"/>
        <!--android:background="@android:drawable/"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Rate us on Play Store"
            android:textColor="#662E91" />
    </LinearLayout>
<!--    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="35dp"
        android:layout_height="match_parent"
        >

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="2016 Helpmeson App"
        />-->
</LinearLayout>