<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.helpmeson">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.helpmesonteam.helpmeson.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.helpmesonteam.helpmeson.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.helpmesonteam.helpmeson.AddDetails" />
        <activity android:name="com.helpmesonteam.helpmeson.FirstScreen" />
        <activity
            android:name="com.helpmesonteam.helpmeson.HelpSelection"
            android:label="Type of Help" />
        <activity
            android:name="com.helpmesonteam.helpmeson.SeniorIssues"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.helpmesonteam.helpmeson.InstaHelp"></activity>
    </application>

</manifest>